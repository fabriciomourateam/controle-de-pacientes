{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/n8n-webhook.js": {
      "maxDuration": 10
    }
  },
  "deploymentProtection": {
    "api/n8n-webhook": false
  },
  "rewrites": [
    {
      "source": "/api/notion-proxy",
      "destination": "/api/notion-proxy.js"
    },
    {
      "source": "/api/sync-dashboard-metrics", 
      "destination": "/api/sync-dashboard-metrics.js"
    },
    {
      "source": "/api/n8n-webhook",
      "destination": "/api/n8n-webhook.js"
    },
    {
      "source": "/api/process-n8n-data",
      "destination": "/api/process-n8n-data.js"
    },
    {
      "source": "/api/public-webhook",
      "destination": "/api/public-webhook.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}